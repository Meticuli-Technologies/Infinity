<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.meti.app.Menu">
    <GridPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to Infinity!" GridPane.halignment="CENTER"/>
        <Button mnemonicParsing="false" onAction="#connectToAServer" text="Connect to a Server"
                GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
        <Button mnemonicParsing="false" onAction="#hostAServer" text="Host a Server" GridPane.halignment="CENTER"
                GridPane.rowIndex="3"/>
        <Button mnemonicParsing="false" onAction="#hostALocalServer" text="Host a Local Server"
                GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
    </GridPane>
</AnchorPane>
